---
const {

    date,
    duration,
    title,
    description,
    href

} = Astro.props
---
<a href={ href }>
    <div class="space-y-4">
        <div class="bg-zinc-200 w-full aspect-video">
            <img
                src=""
                alt=""
                class="w-full h-full"
            />
        </div>
        <div class="space-y-4">
            <div class="flex gap-4">
                <div class="text-xs text-zinc-500">{ date }</div>
                <li class="text-xs text-zinc-500">{ duration }</li>
            </div>
            <h3 class="text-xl font-medium text-ninjapromo_dark_slate">{ title }</h3>
            <p class="text-sm">{ description }</p>
        </div>
    </div>
</a>

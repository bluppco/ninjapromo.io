---
// IMPORT ATOMS
import H4 from "../../atoms/H4.astro"

const {

    title,
    description,
    author_name,
    author_designation,
    src,
    alt,
    logo_src,
    logo_alt

} = Astro.props
---
<div class="space-y-4 border-r border-white pr-16 py-10">
    <div class="bg-zinc-200 w-16 aspect-video">
        <img
            src={ logo_src }
            alt={ logo_alt }
            class="w-full h-full"
        />
    </div>
    <H4>{ title }</H4>
    <p class="text-gray-400 text-sm">{ description }</p>
    <div class="flex gap-4">
        <div class="bg-zinc-200 w-4 aspect-square rounded-full">
            <img
                src={ src }
                alt={ alt }
                class="w-4 aspect-square"
            />
        </div>
        <div>
            <p class="text-gray-500">{ author_name }<p>
            <p class="text-gray-500">{ author_designation }<p>
        </div>
    </div>
</div>
